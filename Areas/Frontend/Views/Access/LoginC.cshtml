@using test2.Areas.Frontend.Models
@model Guest

@{
    Layout = "~/Areas/Frontend/Views/Shared/_Layout/_LoginC.cshtml";
}

@await Html.PartialAsync("~/Areas/Frontend/Views/Shared/_Partial/_modal.cshtml")

<section id="sec1" class="m-0">
    <div class="mb-3" style="color: var(--c-black-075);"><h1>林間書語</h1></div>
    <div id="box_loginC">
        <form asp-area="Frontend" asp-controller="Access" asp-action="AccessCardC" method="post">
            <div class="row" style="align-items: center">
                <div class="col-12 col-md-8 mx-1">
                    <div class="mb-3 form-group d-flex align-items-center">
                        <label asp-for="Account" class="me-2 mb-0 text-nowrap">
                            帳號 <i class="bi bi-person i_loginC"></i>
                        </label>
                        <input type="text" asp-for="Account" class="form-control" />
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label asp-for="Password" class="me-2 mb-0 text-nowrap">
                            密碼 <i class="bi bi-key i_loginC"></i>
                        </label>
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-md-3" id="box_btn">
                    <button type="submit" class="btn mt-0" id="btn_loginC">使用者登入</button>
                </div>
            </div>
        </form>

        <div class="w-100 px-md-5 px-3 my-3">
            <div class="row g-2 justify-content-center">
                <div class="col-auto">
                    <form asp-area="Frontend" asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="Facebook" />
                        <button type="submit" class="btn" style="background-color:cornflowerblue; color:white" id="btn_facebook">
                            <i class="bi bi-facebook"></i> Facebook
                        </button>
                    </form>
                </div>
                <div class="col-auto">
                    <form asp-area="Frontend" asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="Google" />
                        <button type="submit" class="btn btn-light border" id="btn_google">
                            <img src="https://img.icons8.com/color/16/000000/google-logo.png" /> Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="mt-2 text-center">
            <span class="me-2">還沒有帳號嗎？</span>
            <a class="ms-1 fw-bold" href="/Frontend/home/register" style="color: var(--c-green2-100); text-decoration: none">立即註冊</a>
        </div>

    </div>

    <div class="mt-3" style="height: 1.25rem"><div asp-validation-summary="ModelOnly" class="text-danger d-inline" style="font-size: 1.25rem;"></div></div>

    @await Html.PartialAsync("~/Areas/Frontend/Views/Shared/_Partial/_tree.cshtml")
</section>