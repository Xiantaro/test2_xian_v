@{
    var userName = ViewData["UserName"];
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3 m-0 p-0">
    <div class="container-fluid" id="box_nav">
        <a class="navbar-brand" asp-area="Frontend" asp-controller="Home" asp-action="Index" id="logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex" id="navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark link" asp-area="Frontend" asp-controller="Home" asp-action="Index">
                        首頁 <i class="bi bi-house"></i>
                    </a>
                </li>
                <li class="nav-item">
                    @{
                        if (!string.IsNullOrEmpty(userName as string))
                        {
                            <a class="nav-link text-dark link" asp-area="Frontend" asp-controller="Home" asp-action="Client">
                                @userName <i class="bi bi-person"></i>
                            </a>
                        }
                        else if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-dark link" asp-area="Frontend" asp-controller="Home" asp-action="Client">
                                @User.Identity.Name <i class="bi bi-person"></i>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link text-dark link" asp-area="Frontend" asp-controller="Access" asp-action="LoginC">
                                登入 <i class="bi bi-person"></i>
                            </a>
                        }
                    }
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark link" data-bs-toggle="modal" data-bs-target="#mod_search" id="btn_modal">
                        搜尋 <i class="bi bi-search"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>