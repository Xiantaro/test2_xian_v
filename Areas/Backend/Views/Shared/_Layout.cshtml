<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>圖書館管理系統</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/Manage/site.css" />
</head>
<body>
    <!-- 頁首 -->
    <header class="d-flex justify-content-between align-items-end flex-wrap gap-3">

        <div class="d-flex gap-3 align-items-end">
            <a href="@Url.Action("Index", "Manage", new { area = "Backend" })" class="text-white text-decoration-none fw-bold fs-4">📚 圖書館管理系統</a>
        </div>
        <div class="d-flex gap-3 align-items-end">
            <form asp-area="Frontend" asp-controller="Access" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-link text-white text-decoration-none fw-bold fs-4">登出</button>
            </form>
        </div>
    </header>
    <!--功能欄位-->
    <div class="wrapper">
        <!-- 各頁內容區塊 -->
        <div class="content  container-fluid">
            <div class="row">
                <!--左邊-->
                <div class="col-2">
                    <div class="accordion fs-4" id="sidebarAccordion">
                        <!-- 書籍管理 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingBooks">
                                <button class="accordion-button" type="button" data-bs-toggle="" data-bs-target="#collapseBooks">
                                    📚
                                </button>
                            </h2>
                            <div id="collapseBooks" class="accordion-collapse collapse show" data-bs-parent="#sidebarAccordion">
                                <div class="accordion-body">
                                    <div class="sub-category">
                                        <a class="nav-link" href="#" id="BooksAdded">書籍登錄</a>
                                        <a class="nav-link" href="#" id="BooksQuery">書籍管理</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 借閱與歸還 -->
                        <div class="accordion-item show">
                            <h2 class="accordion-header" id="headingBorrow">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="" data-bs-target="#collapseBorrow">
                                    📖
                                </button>
                            </h2>
                            <div id="collapseBorrow" class="accordion-collapse collapse show" data-bs-parent="#sidebarAccordion">
                                <div class="accordion-body">
                                    <div class="sub-category">
                                        <a class="nav-link" href="#" id="BorrowMode">借閱模式</a>
                                        <a class="nav-link" href="#" id="AppointmentMode">預約模式</a>
                                        <a class="nav-link" href="#" id="ReturnMode">還書模式</a>
                                        <a class="nav-link" href="#" id="BorrowQuery">借閱查詢</a>
                                        <a class="nav-link" href="#" id="AppointmentQuery">預約管理</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 活動與推廣 -->
                        <div class="accordion-item show d-none">
                            <h2 class="accordion-header" id="headingBorrow">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="" data-bs-target="#collapseEvent">
                                    🛠️
                                </button>
                            </h2>
                            <div id="collapseEvent" class="accordion-collapse collapse show " data-bs-parent="#sidebarAccordion">
                                <div class="accordion-body">
                                    <div class="sub-category">
                                        <a class="nav-link" href="#">館內活動</a>
                                        <a class="nav-link" href="#">公告與推薦</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 右側：頁面主內容 -->
                <div class="col-10 py-2" id="content-panel">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- 頁尾 -->
    <footer>
        &copy; 2025 圖書館管理系統 — Powered by Bootstrap 5
    </footer>
    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/dist/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/dist/jquery-ui.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/Manage/zhongXian.js")"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>